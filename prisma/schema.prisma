generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(uuid())
  name         String
  email        String  @unique
  senha        String
  fotoDePerfil String?

  emails Email[]

  @@map("users")
}

model Email {
  id      String   @id @default(uuid())
  title   String
  data    DateTime @default(now())
  content String
  jaVisto Boolean  @default(false)

  idDeQuemEnviou  String
  idDeQuemRecebeu String

  user         User @relation(fields: [idDeQuemEnviou], references: [id])
  destinatario User @relation(fields: [idDeQuemRecebeu], references: [id])

  @@map("emails")
}
